<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_f8">

    <FrameLayout
        android:id="@+id/frame_layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:background="@color/white">

        <FrameLayout
            android:id="@+id/frame_layout_back"
            android:layout_width="@dimen/dp_size_40"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_finish_back" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_message_system"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_size_8"
        android:layout_below="@+id/frame_layout_title" />

</RelativeLayout>