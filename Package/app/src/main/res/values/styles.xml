    <!--</style>-->
    <style name="text_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_38</item>
        <item name="android:layout_marginTop">@dimen/dp_30</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginTop">@dimen/dp_50</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/text_view_continue</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:background">@drawable/register_continue_background</item>
    </style>

    <!-- 自定义数字键盘text -->
    <style name="num_keyboard_num_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/dp_25</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/num_keyboard_text_color</item>
        <item name="android:background">@drawable/common_column_bg</item>
    </style>

    <style name="popwin_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="text_report">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:background">@drawable/drawable_background_report</item>
    </style>
</resources>
