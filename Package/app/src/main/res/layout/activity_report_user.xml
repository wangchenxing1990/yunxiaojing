<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white_color">

        <FrameLayout
            android:id="@+id/frame_layout_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_finish_back" />
        </FrameLayout>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Report"
            android:textColor="@color/black_color"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/relative_layout"
        android:backgroundTint="@color/black" />

    <TextView
        android:id="@+id/text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:text="@string/text_select_report_reason"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_one"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_10"
        android:text="@string/text_harmful_information"
        android:textSize="@dimen/sp_12" />

    <View
        android:id="@+id/view_line_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/text_two"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/linear_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line_two"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_one"
            style="@style/text_report"
            android:text="Pornographic" />

        <TextView
            android:id="@+id/text_view_two"
            style="@style/text_report"
            android:text="Politically sensitive" />

        <TextView
            android:id="@+id/text_view_three"
            style="@style/text_report"
            android:text="Illegal violence" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_one"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_fore"
            style="@style/text_report"
            android:text="Illegal items" />

        <TextView
            android:id="@+id/text_view_five"
            style="@style/text_report"
            android:text="Gambling" />

        <TextView
            android:id="@+id/text_view_six"
            style="@style/text_report"
            android:text="Stolen photo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_two"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_seven"
            style="@style/text_report"
            android:text="Bloody violence" />

        <TextView
            android:id="@+id/text_view_eight"
            style="@style/text_report"
            android:text="False user" />

        <TextView
            android:id="@+id/text_view_nine"
            style="@style/text_report"
            android:text="Other…" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_three"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:text="@string/text_harmful_information"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/linear_layout_fore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_three"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_ten"
            style="@style/text_report"
            android:text="Financial fraud" />

        <TextView
            android:id="@+id/text_view_eleven"
            style="@style/text_report"
            android:text="Part-time fraud" />

        <TextView
            android:id="@+id/text_view_zero"
            style="@style/text_report"
            android:text="Other fraud" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_fore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_fore"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:text="@string/text_harmful_information"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/linear_Layout_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_fore"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_one_two"
            style="@style/text_report"
            android:text="Advertisement" />

        <TextView
            android:id="@+id/text_view_one_three"
            style="@style/text_report"
            android:text="Insult/abuse" />

        <TextView
            android:id="@+id/text_view_one_fore"
            style="@style/text_report"
            android:text="Other…" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_submit"
        style="@style/button_title_style"
        android:layout_below="@+id/linear_Layout_five"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:text="Submit" />
</RelativeLayout>